@{
    ViewData["Title"] = "Home Page";
}
<div class="row">
  <h1>Energy</h1>
</div>
<div class="row">
  Energy information from: https://datamarket.azure.com/browse/data?price=free, https://api.datamarket.azure.com/UnitedNations/Energy/
  <br />
  Units in <span id="unit"></span>
</div>
<div class="row">
  <!--<button id="filter">Filter</button>-->
</div>

<div class="row" style="margin-top: 20px;">
  <div class="container">
    <div class="row">
          <div class="table-responsive">
          <table id="dataTable" class="table table-condensed table-hover">
            <thead>
              <tr>
                <th>#</th>
                <th>Country</th>
                <th>Quantity</th>
              </tr>
            </thead>
            <tbody>
            </tbody>
          </table>
          </div>
    </div>
  </div>
</div>

@section scripts {
<script>
  $(function(){
    $.getJSON('api/energy/solar').then(function(data){
      $('#unit').text(data[0].unit);
       $('#dataTable tbody tr').remove().end();
       $.each(data, function(key, item){
         $('#dataTable > tbody:last-child').append('<tr>'
                + '<td>' + item.countryId + '</td>'
                + '<td>' + item.countryName + '</td>'
                + '<td>' + item.quantity + '</td>');
       });
    });
  });
  </script>
}
